  height: 250rpx;
}

/* 在线对战样式 */
.zxdz {
  height: 200rpx;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  margin-left: 50rpx;
  margin-right: 50rpx;
  background-color: #09BBD0;

  display: flex;
  justify-content: center;
  align-items: center;

  border-radius: 30rpx;
}
.zxdz image {
  margin:0 50rpx;
  flex:1;
  width: 150rpx;
  height: 150rpx;
}
.zxdz view {
  flex:3;
  font-size: 50rpx;
}

